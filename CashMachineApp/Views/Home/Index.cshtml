@{
    ViewData["Title"] = "Home";
}

<div class="card w-100">
    <div class="card-body text-center">
        <h3>Welcome to the cash machine.</h3>
        <div class="mt-4">
            <div>Please enter amount of money to withdraw</div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input id="txtAmount" type="text" class="form-control">
            </div>
            <div>
                <button id="btnWithdraw" type="button" class="btn btn-primary btn-lg">Withdraw</button>
            </div>
        </div>
        <div id="result" class="mt-3"></div>
    </div>
</div>

<div id="spinner" class="text-center w-100 mt-3 d-none">
    <div class="spinner-border" style="width: 3rem; height: 3rem;" role="status">
        <span class="sr-only"></span>
    </div>
</div>

@section Scripts
    {
    <environment include="Development">
        <script src="~/app/notes/notes.manager.js"></script>
        <script src="~/app/notes/notes.service.js"></script>
        <script src="~/app/helpers/handlebars.helpers.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/app/notes/notes.manager.min.js"></script>
        <script src="~/app/notes/notes.service.min.js"></script>
        <script src="~/app/helpers/handlebars.helpers.min.js"></script>
    </environment>

    <script id="notes-template" type="text/x-handlebars-template">
        Result:
        {{#if errorMessage}}
            {{errorMessage}}
        {{else}}
            [ {{#notesResult notes}}{{this}}{{/notesResult}} ]
        {{/if}}
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            notesManager.enhanceWithdrawBtn();
        });
    </script>
}